include header.pug
div.col-md-10
    if(items.length > 0)
        each item in items
            div#layout
                div#up
                    h1#bookName=item.productName
                div#middle
                    div#left
                        img#bookPic(src=("" + "./img/" + item.assId + ".png"))
                    div#right
                        h2#bookPrice=item.price +"kr"
                        p#bookStock= "I lager: " +item.stock
                        if (login)
                            a(href="/addToCart")
                                button#addToBasket Add to basket
                        else
                            button#addToBasket(disabled="disabled") Login to purchase
                div#bottom
                    p#bookDesc1= "Om " + item.productName + ":"
                    p#bookDesc2= item.description
                //a(href="" action="") l√§nk
    else
        div.container
            h1 No items!

include footer.pug