include header.pug
div.col-md-10
    if (typeof message != 'undefined' && message.length > 0)
        div.alert.alert-warning(role="alert")
            p=message
    div.col-md-3
    div.col-md-4
        div.card
            div.card-body
                div.card-header
                    h3 Logga in med e-post
                form.inputForm(action='/loginUser', method='POST')
                    p
                    | E-post:
                    br
                    input(type='text', name='email', value='' placeholder='name@example.com')
                    br
                    | Lösenord
                    br
                    input(type='password', name='pw', value='')
                    br
                    br
                    button.btn.btn-success(type='submit') Logga in
                    input(type="hidden" name="referer" value=referer)

    div.col-md-5  
        div.card
            div.card-body
                div.card-header
                    h3 Skapa användare
                form.inputForm(action='/createUser', method='POST')
                    p
                    | Förnamn:
                    br
                    input(type='text', name='Cfn', value='')
                    br
                    | Efternamn:
                    br
                    input(type='text', name='Cln', value='')
                    br
                    | E-post:
                    br
                    input(type='text', name='Cemail', value='' placeholder='name@example.com')
                    br
                    | Lösenord
                    br
                    input(type='password', name='Cpw', value='')
                    br
                    br
                    button.btn.btn-info(type='submit') Skapa
include footer.pug